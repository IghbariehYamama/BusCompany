                        {

                            <h1>Welcome to Transpo!</h1>

                        }
                    }
                    <h3>Let's begin our next adventure!</h3>

                    <form class="form" method="post" asp-action="ChooseBus">
                        <input asp-for="from_destination" type="text" placeholder="Origin...">
                        <input asp-for="to_destination" type="text" placeholder="Destination...">
                        <button type="submit" id="login-button">Go Go!</button>
                    </form>

                </div>


            </div>

        </div>
    </div>


    <section class="bg-service bg-section" id="service">
        <div class="container-fluid text-center">
            <h1 class="container-h1">Our Services</h1>
            <div class="row service-round-3 slideanim">
                <div class="col-sm-4 text-center round">
                    <div class="service-round b-party">
                        <img src="~/images/Ticket-128.png" height="100" width="100" />
                    </div>
                    <h4>Buy Tickets</h4>
                    <p>You can buy your ticket and reserve your seat beforehand</p>
                </div>
                <div class="col-sm-4 text-center round">
                    <div class="service-round wedding">
                        <img src="~/images/Sale-Discount-128.png" height="100" width="100" />
                    </div>
                    <h4>Get a Discount</h4>
                    <p>Enjoy Our Discounts on Holidays</p>
                </div>
                <div class="col-sm-4 text-center round">
                    <div class="service-round b-dinner">
                        <img src="~/images/Customer-Service-128.png" height="100" width="100" />
                    </div>
                    <h4>Make Friends</h4>
                    <p>You can contact our staff and get friendly</p>
                </div>
            </div>
            @if (!User.IsInRole("Manager") && !(User.IsInRole("Passenger")))
            {
                <a asp-action="ViewRegister" asp-controller="Passenger" class="btn">Sign Up</a>

            }
        </div>
    </section>



    <section class="bg-staff" id="staff">
