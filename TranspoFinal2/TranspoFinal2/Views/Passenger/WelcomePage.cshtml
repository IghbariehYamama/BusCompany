    <link href="~/css/welcomepagestyle.css" rel="stylesheet" />



</head>
<body id="myPage" data-spy="scroll" data-target=".navbar" data-offset="60">

    <div class="jumbotron">

        <ul class="bg-bubbles">
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
            <li></li>
        </ul>
        <div class="container-fluid" style="background: linear-gradient(to bottom right, #50a3a2 0%, #53e3a6 100%)">

            <div class="wrapper">

                <div class="container">

                    @{ if (User.IsInRole("Passenger") || User.IsInRole("Manager"))
                        {
                            <h1>Welcome @ViewBag.name to Transpo!</h1>

                        }

