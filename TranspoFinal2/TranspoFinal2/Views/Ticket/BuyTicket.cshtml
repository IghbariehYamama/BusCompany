@model TranspoFinal2.Models.Bus_Seats
@{
    ViewData["Title"] = "Buy Ticket";
}

<!DOCTYPE html>

<html lang="en">
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width-device-width,initial-scale=1.0, shrink-to-fit=no" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <title>Buy Ticket</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        body {
            background: linear-gradient( #de9b35, #FEB58A) fixed; /* W3C, IE 10+ / Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
        }

        .container {
            background: #fff;
            box-shadow: 15px 20px 0px rgba(0,0,0,0.1);
        }
        body {
            padding: 15px;
        }

        .bus {
            border: 1px solid #ddd;
            width: 20%;
            padding: 0.5rem;
            border-radius: 4px;
        }

            .bus.seat2-3 .seats .seat:nth-child(2), .bus.seat2-2 .seats .seat:nth-child(2) {
                margin-right: 14.28571428571429%;
            }

            .bus.seat3-2 .seats .seat:nth-child(3) {
                margin-right: 14.28571428571429%;
            }

        .seats {
            display: flex;
            flex-direction: row;
            flex-wrap: nowrap;
            -ms-flex-pack: center !important;
            justify-content: center !important;
            padding: 0;
            margin-bottom: 2px;
        }

            .seats .seat {
                display: flex;
                flex: 0 0 14.28571428571429%;
                padding: 3px;
                position: relative;
            }

                .seats .seat label {
                    border-radius: 4px;
                    background: #3783b5;
                    padding: 0;
                    width: 25px;
                    height: 25px;
                    margin-bottom: 0.1rem;
                    display: inline-block;
                    font-size: 0.7rem;
                }

                .seats .seat input[type="radio"] {
                    display: none !important;
                }

                    .seats .seat input[type="radio"] + label {
                        border-radius: 4px;
                        background: #3783b5;
                        text-align: center;
                        cursor: pointer;
                        display: inline-block;
                        padding: 4px;
                        color: #fff;
                    }

                    .seats .seat input[type="radio"]:checked + label {
                        background: #46be8a;
                    }

                        .seats .seat input[type="radio"]:checked + label:after {
                            background: none;
                        }

                    .seats .seat input[type="radio"]:disabled + label {
                        cursor: not-allowed;
                        background: #f73737;
                    }

    </style>
</head>
<body>
    <br />
    <br />
    <br />
    <div class="container" style="width:60%; padding:30px; margin-bottom:25px">
        <form asp-action="DoneBuying" asp-controller="Ticket" method="post" enctype="multipart/form-data">

            <h3>Choose Seat For Bus Num @ViewBag.bus</h3>

            <div class="bus seat2-2 border-0 p-0">
                <div class="seat-row-1">
                    <ol class="seats">

                        <li class="seat">
                            <input role="input-passenger-seat" name="passengers[1][seat]" id="seat-radio-1-1" value="1" required="" type="radio" disabled>
                            <label for="seat-radio-1-1">
                                1
                            </label>
                        </li>

                        <li class="seat">
                            <input role="input-passenger-seat" name="passengers[1][seat]" id="seat-radio-1-2" value="2" required="" type="radio" disabled>
                            <label for="seat-radio-1-2">
                                2
                            </label>
                        </li>
                        <li class="seat">
                            <input role="input-passenger-seat" name="passengers[1][seat]" id="seat-radio-1-3" value="3" required="" type="radio" disabled>
                            <label for="seat-radio-1-3">
                                3
                            </label>
                        </li>
                        <li class="seat">
                            <input role="input-passenger-seat" name="passengers[1][seat]" id="seat-radio-1-4" value="4" required="" type="radio" disabled>
                            <label for="seat-radio-1-4">
                                4
                            </label>
                        </li>
                    </ol>
                </div>
                 @if (ViewBag.seats.Count != 0)
                    {
                        <div class="seat-row-2">
                            <ol class="seats">


                                @for (int i = 5; i < 9; i++)
                                {

                                    int j = 0;
                                    bool flag = false;
                                    for (j = 0; j < ViewBag.seats.Count; j++)
                                    {
                                        if (int.Parse(ViewBag.seats[j].seat_num) == i)
                                        {
                                            <li class="seat">
                                                <input role="input-passenger-seat" asp-for="seat_num" id="seat-radio-1-@i" value="@i" required="" type="radio" disabled>
                                                <label for="seat-radio-1-@i">
                                                    @i
                                                </label>
                                            </li>
                                            flag = true;
                                        }

                                    }
                                    if (!flag)
                                    {
                                        <li class="seat">
                                            <input role="input-passenger-seat" asp-for="seat_num" id="seat-radio-1-@i" value="@i" required="" type="radio">
                                            <label for="seat-radio-1-@i">
                                                @i
                                            </label>
                                        </li>
                                    }

                                }


                            </ol>
                        </div>
                        <div class="seat-row-3">
                            <ol class="seats">


                                @for (int i = 9; i < 13; i++)
                                {
                                    int j = 0;
                                    bool flag = false;
                                    for (j = 0; j < ViewBag.seats.Count; j++)
                                    {
                                        if (int.Parse(ViewBag.seats[j].seat_num) == i)
                                        {
                                            <li class="seat">
                                                <input role="input-passenger-seat" asp-for="seat_num" id="seat-radio-1-@i" value="@i" required="" type="radio" disabled>
                                                <label for="seat-radio-1-@i">
                                                    @i
                                                </label>
                                            </li>
                                            flag = true;
                                        }

                                    }
                                    if (!flag)
                                    {
                                        <li class="seat">
                                            <input role="input-passenger-seat" asp-for="seat_num" id="seat-radio-1-@i" value="@i" required="" type="radio">
                                            <label for="seat-radio-1-@i">
                                                @i
                                            </label>
                                        </li>
                                    }

                                }

                            </ol>
                        </div>
                        <div class="seat-row-4">
                            <ol class="seats">


                                @for (int i = 13; i < 17; i++)
                                {

                                    int j = 0;
                                    bool flag = false;
                                    for (j = 0; j < ViewBag.seats.Count; j++)
                                    {
                                        if (int.Parse(ViewBag.seats[j].seat_num) == i)
                                        {
                                            <li class="seat">
                                                <input role="input-passenger-seat" asp-for="seat_num" id="seat-radio-1-@i" value="@i" required="" type="radio" disabled>
                                                <label for="seat-radio-1-@i">
                                                    @i
                                                </label>
                                            </li>
                                            flag = true;
                                        }

                                    }
                                    if (!flag)
                                    {
                                        <li class="seat">
                                            <input role="input-passenger-seat" asp-for="seat_num" id="seat-radio-1-@i" value="@i" required="" type="radio">
                                            <label for="seat-radio-1-@i">
                                                @i
                                            </label>
                                        </li>
                                    }


                                }

                            </ol>
                        </div>
                        <div class="seat-row-5">
                            <ol class="seats">


                                @for (int i = 17; i < 21; i++)
                                {


                                    int j = 0;
                                    bool flag = false;
                                    for (j = 0; j < ViewBag.seats.Count; j++)
                                    {
                                        if (int.Parse(ViewBag.seats[j].seat_num) == i)
                                        {
                                            <li class="seat">
                                                <input role="input-passenger-seat" asp-for="seat_num" id="seat-radio-1-@i" value="@i" required="" type="radio" disabled>
                                                <label for="seat-radio-1-@i">
                                                    @i
                                                </label>
                                            </li>
                                            flag = true;
                                        }

                                    }
                                    if (!flag)
                                    {
                                        <li class="seat">
                                            <input role="input-passenger-seat" asp-for="seat_num" id="seat-radio-1-@i" value="@i" required="" type="radio">
                                            <label for="seat-radio-1-@i">
                                                @i
                                            </label>
                                        </li>
                                    }


                                }

                            </ol>
                        </div>
                        <div class="seat-row-6">
                            <ol class="seats">


                                @for (int i = 21; i < 25; i++)
                                {
                                    int j = 0;
                                    bool flag = false;
                                    for (j = 0; j < ViewBag.seats.Count; j++)
                                    {
                                        if (int.Parse(ViewBag.seats[j].seat_num) == i)
                                        {
                                            <li class="seat">
                                                <input role="input-passenger-seat" asp-for="seat_num" id="seat-radio-1-@i" value="@i" required="" type="radio" disabled>
                                                <label for="seat-radio-1-@i">
                                                    @i
                                                </label>
                                            </li>
                                            flag = true;
                                        }

                                    }
                                    if (!flag)
                                    {
                                        <li class="seat">
                                            <input role="input-passenger-seat" asp-for="seat_num" id="seat-radio-1-@i" value="@i" required="" type="radio">
                                            <label for="seat-radio-1-@i">
                                                @i
                                            </label>
                                        </li>
                                    }

                                }

                            </ol>
                        </div>

                    }
               



                  @if (ViewBag.seats.Count == 0)
                    {
                        <div class="seat-row-2">
                            <ol class="seats">

                                
                                    @for (int i = 5; i < 9; i++)
                                    {

                                                <li class="seat">
                                                    <input role="input-passenger-seat" asp-for="seat_num" id="seat-radio-1-@i" value="@i" required="" type="radio">
                                                    <label for="seat-radio-1-@i">
                                                        @i
                                                    </label>
                                                </li>
                                            

                                    }
                                

                            </ol>
                        </div>
                        <div class="seat-row-3">
                            <ol class="seats">

                                
                                    @for (int i = 9; i < 13; i++)
                                    {

                                            
                                                <li class="seat">
                                                    <input role="input-passenger-seat" asp-for="seat_num" id="seat-radio-1-@i" value="@i" required="" type="radio">
                                                    <label for="seat-radio-1-@i">
                                                        @i
                                                    </label>
                                                </li>
                                        
                                    }
                                
                            </ol>
                        </div>
                        <div class="seat-row-4">
                            <ol class="seats">

                                
                                    @for (int i = 13; i < 17; i++)
                                    {
                                
                                                <li class="seat">
                                                    <input role="input-passenger-seat" asp-for="seat_num" id="seat-radio-1-@i" value="@i" required="" type="radio">
                                                    <label for="seat-radio-1-@i">
                                                        @i
                                                    </label>
                                                </li>
                                         

                                    }
                                
                            </ol>
                        </div>
                        <div class="seat-row-5">
                            <ol class="seats">

                                
                                    @for (int i = 17; i < 21; i++)
                                    {

                                          
                                                <li class="seat">
                                                    <input role="input-passenger-seat" asp-for="seat_num" id="seat-radio-1-@i" value="@i" required="" type="radio">
                                                    <label for="seat-radio-1-@i">
                                                        @i
                                                    </label>
                                                </li>
                                        
                                    }
                                
                            </ol>
                        </div>
                        <div class="seat-row-6">
                            <ol class="seats">

                                
                                    @for (int i = 21; i < 25; i++)
                                    {
                                                <li class="seat">
                                                    <input role="input-passenger-seat" asp-for="seat_num" id="seat-radio-1-@i" value="@i" required="" type="radio">
                                                    <label for="seat-radio-1-@i">
                                                        @i
                                                    </label>
                                                </li>
                                        
                                    }
                                
                            </ol>
                        </div>

                    }
                

            </div>
            <div class="text-left mt-2">
                <h4>Guide: </h4>
                <button class="btn btn-primary btn-xs mb-2">Available</button>
                <button class="btn btn-success btn-xs mb-2">Choosen</button>
                <button class="btn btn-danger btn-xs mb-2">Booked</button>
            </div>

            <div class="row">
                <button type="submit" class="btn">Finish</button>
            </div>
            <input asp-for="route_ID" value="@ViewBag.bus" hidden>
            <input asp-for="pass_ID" value="@User.Identity.Name" hidden>

        </form>

    </div>

        <!-- Optional JavaScript -->
        <!-- jQuery first, then Popper.js, then Bootstrap JS -->
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</body>
</html>